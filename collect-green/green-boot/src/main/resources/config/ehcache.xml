<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false" name="defaultCache">

    <diskStore path="${java.io.tmpdir}/temp/collect/ehcache" />

    <!-- 默认缓存-->
    <defaultCache maxEntriesLocalHeap="100" eternal="false" timeToIdleSeconds="300" timeToLiveSeconds="600"
                  overflowToDisk="true" maxEntriesLocalDisk="100000" />

    <!-- 用户缓存 -->
    <cache name="adminCache" maxElementsInMemory="10000" maxElementsOnDisk="10000000" eternal="true" overflowToDisk="true"/>

    <!-- 用户缓存 -->
    <cache name="adminBusinessCache" maxElementsInMemory="10000" maxElementsOnDisk="10000000" eternal="true" overflowToDisk="true"/>

    <!-- 小程序首页缓存 -->
    <cache name="getCollectDetail" maxElementsInMemory="10000" maxElementsOnDisk="10000000"
           timeToIdleSeconds="300" timeToLiveSeconds="19800" eternal="false" overflowToDisk="true" memoryStoreEvictionPolicy="FIFO" />
</ehcache>